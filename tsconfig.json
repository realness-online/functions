{
	"compilerOptions": {
		"allowJs": true,
		"checkJs": true,
		"noEmit": true,
		"target": "ES2022",
		"module": "ES2022",
		"moduleResolution": "node",
		"allowSyntheticDefaultImports": true,
		"types": ["node"],
		"paths": {
			"#utils/*": ["./src/utils/*"]
		}
	},
	"include": ["src/**/*"],
	"exclude": ["node_modules", "spec/**/*"]
}
